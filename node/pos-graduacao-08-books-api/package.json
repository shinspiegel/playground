{
  "name": "06-api-express-typescript",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "start": "npm run typescript:compile && npm run parcel:build && node dist/index.js",
    "dev": "npm run typescript:watch & npm run parcel:dev & npm run nodemon ",
    "nodemon": "nodemon dist/index.js",
    "typescript:compile": "rm -rf ./dist && tsc",
    "typescript:watch": "rm -rf ./dist && tsc --watch",
    "parcel:build": "rf -rf ./public; parcel build src/view/index.html --out-dir public",
    "parcel:dev": "rf -rf ./public; parcel --port 9010 src/view/index.html --out-dir public"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "useTabs": false,
    "semi": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 12
          }
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "@babel/transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@types/express": "^4.17.6",
    "@types/mongoose": "^5.7.14",
    "nodemon": "^2.0.3",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3",
    "eslint": "^6.8.0",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/runtime": "^7.8.4",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^24.0.25",
    "babel-jest": "^24.9.0",
    "parcel-bundler": "^1.12.4"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.17",
    "morgan": "^1.10.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "sweetalert": "^2.1.2"
  }
}
