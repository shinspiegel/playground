{
  "name": "backend",
  "version": "0.1.1",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "workspace:clean": "rm -rf node_modules; yarn",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "api": "apidoc -i src/ -o apidocs/"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS && yarn test --silent=true"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "replace 'https://github.com/shinspiegel/pos-graduacao-frontend/issues/' 'https://ora.pm/project/196922/kanban/task/' CHANGELOG.md"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/assetsTransformer.js"
    }
  },
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^7.1.0",
    "axios": "^0.19.1",
    "bcryptjs": "^2.4.3",
    "brain.js": "^2.0.0-beta.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.7",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@babel/runtime": "^7.8.4",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@types/jest": "^24.0.25",
    "babel-jest": "^24.9.0",
    "better-docs": "^1.4.7",
    "husky": "^4.2.0",
    "jest": "^24.9.0",
    "jsdoc": "^3.6.3",
    "minami": "^1.2.3",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.4",
    "replace": "^1.1.5",
    "standard-version": "^7.1.0"
  }
}
